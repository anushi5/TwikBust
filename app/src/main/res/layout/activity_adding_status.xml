<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anushi.twikbust.AddingStatus">


    <ImageView
        android:id="@+id/ivuserimage"
        android:layout_width="70dp"
        android:layout_height="53dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tvpost"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/tvpost"
        android:layout_width="200dp"
        android:layout_height="53dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/etPost"
            android:layout_width="0dp"
            android:layout_height="111dp"
            android:ems="10"
            android:hint="What you think?"
            android:inputType="textMultiLine"
            android:layout_weight="1.04"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/tvpost"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />


    <ImageView

        android:id="@+id/iv_attach"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginLeft="151dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:layout_weight="1.74"
        android:background="@drawable/ic_attach_file_black_24dp"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintLeft_toRightOf="@+id/iv_post"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivmypostimage"
        android:layout_marginStart="151dp"
        android:layout_marginEnd="8dp" />


    <ImageView
        android:id="@+id/ivmypostimage"
        android:layout_width="368dp"
        android:layout_height="238dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPost"
        app:srcCompat="@drawable/persoicon" />

    <ImageView

        android:id="@+id/iv_post"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/ic_send_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivmypostimage"
        android:layout_marginStart="90dp" />


</android.support.constraint.ConstraintLayout>
